    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "chai": "^4.2.0",
    "child_process": "^1.0.2",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "fs": "^0.0.1-security",
    "hardhat": "^2.0.0",
    "hardhat-abi-exporter": "^2.10.1",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typechain": "^8.1.0",
    "typescript": "^4.0.3",
    "wagmi": "^0.7.5"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  }
}

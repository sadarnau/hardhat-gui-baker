{
  "name": "hardhat-front",
  "version": "0.0.2",
  "description": "Hardhat TypeScript plugin to frontify smartcontracts",
  "author": "Sam",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "w": "yarn workspace next-website",
    "h": "yarn workspace hardhat-utils",
    "website": "yarn w dev",
    "fork": "yarn --cwd packages/hardhat hardhat node",
    "deploy": "yarn --cwd packages/hardhat hardhat run scripts/deployTok.ts --network localhost",
    "clean": "rm -rf dist yarn-error.log"
  },
  "files": [
    "dist/src/",
    "src/"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "chai": "^4.2.0",
    "hardhat": "^2.0.0",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
